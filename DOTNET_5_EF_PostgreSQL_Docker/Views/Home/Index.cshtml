@using DOTNET_5_EF_PostgreSQL_Docker.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PhoneOrderViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Available products:</h2>
<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@nameof(PhoneViewModel.Manufacturer)</th>
                        <th scope="col">@nameof(PhoneViewModel.Model)</th>
                        <th scope="col">@nameof(PhoneViewModel.Price)</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Phones)
                    {
                        <tr>
                            <th scope="row">@item.Manufacturer</th>
                            <td>@item.Model</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <a asp-controller="order" asp-action="index" asp-route-id="@item.PhoneId.ToString()">Order</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col">
        </div>
    </div>
</div>

@if (Model.Orders.Count > 0)
{
    <h2>Orders:</h2>

    <div class="container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col-6">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">@nameof(OrderViewModel.UserName)</th>
                            <th scope="col">@nameof(OrderViewModel.ContactPhone)</th>
                            <th scope="col">@nameof(OrderViewModel.Manufacturer)</th>
                            <th scope="col">@nameof(OrderViewModel.Model)</th>
                            <th scope="col">@nameof(OrderViewModel.Price)</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Orders)
                        {
                            <tr>
                                <th scope="row">@item.UserName</th>
                                <td>@item.ContactPhone</td>
                                <td>@item.Manufacturer</td>
                                <td>@item.Model</td>
                                <td>@item.Price.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
}
